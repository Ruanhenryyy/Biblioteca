	private List<Cliente> clientes;
	private List<Funcionario> funcionarios;
	List<Livro> livros;
	String cnpj;
	String telefone;
	String endereco;
	
	public Biblioteca(String cnpj, String telefone, String endereco) {
		this.cnpj = cnpj;
